{
  "name": "secure-workspace-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:fix": "prettier --write . && eslint . --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/shared/db/migrate.ts",
    "db:reset": "tsx src/shared/db/reset.ts",
    "db:rebuild": "pnpm run db:reset && pnpm run migrate",
    "db:seed": "tsx src/shared/db/seed.ts",
    "db:generate": "kysely-codegen --dialect=postgres --url=$POSTGRES_URL --out-file=src/shared/db/types.ts --env-file=.env.local",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "check:unused": "knip",
    "check:duplicates": "jscpd .",
    "check:exports": "ts-prune",
    "check:deps": "depcheck",
    "check:quality": "pnpm run check:unused && pnpm run check:duplicates && pnpm run check:exports && pnpm run check:deps",
    "check:all": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run check:quality"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "kysely": "^0.28.9",
    "next": "16.1.5",
    "pg": "^8.16.3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sanitize-html": "^2.17.0",
    "server-only": "^0.0.1",
    "tsx": "^4.21.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sanitize-html": "^2.16.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jscpd": "^4.0.5",
    "knip": "^5.78.0",
    "kysely-codegen": "^0.19.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tailwindcss": "^4.1.18",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.3"
  }
}
